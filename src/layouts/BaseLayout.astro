---
import BaseHead from './BaseHead.astro'
import BeforeBodyEnd from './BeforeBodyEnd.astro'
import Header from '../components/Header.vue'
import Footer from '../components/Footer.vue'

const {title} = Astro.props
---
<html lang="en">
  <head>
    <BaseHead
      title={title}
    />
  </head>
  <body class="flex flex-col min-h-screen font-primary bg-dark text-white">
    <Header client:visible />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
    <BeforeBodyEnd />
  </body>
</html>
